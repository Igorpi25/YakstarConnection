<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_connection_layout_dimming"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/window_pading" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wifi" />

        <TextView
            android:id="@+id/fragment_connection_server_textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/connection_textview_message"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Код ошибки: 11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fragment_connection_server_textview_message"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/fragment_connection_button_confirm"
                style="@style/style_button_dialog"
                android:layout_width="@dimen/widget_width_small_big"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/connection_button_confirm" />

            <Button
                android:id="@+id/fragment_connection_button_cancel"
                style="@style/style_button_dialog_alter"
                android:layout_width="@dimen/widget_width_small_big"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_connection_edittext_code"
                android:layout_centerHorizontal="true"
                android:text="@string/connection_button_cancel"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>